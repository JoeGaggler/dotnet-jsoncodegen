{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Pingmint.CodeGen.Json/Pingmint.CodeGen.Json.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/Pingmint.CodeGen.Json.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/test"
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Pingmint.CodeGen.Json/Pingmint.CodeGen.Json.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Pingmint.CodeGen.Json/Pingmint.CodeGen.Json.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--",
                "--input",
                "../../test/SampleSerializer.txt",
                "--output",
                "../../test/SampleSerializer.cs",
                "--class",
                "Pingmint.CodeGen.Json.Test.SampleSerializer",
                "-a",
                "public"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Pingmint.CodeGen.Json"
            }
        },
        {
            "label": "dotnet pack",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Pingmint.CodeGen.Json"
            }
        },
        {
            "label": "dotnet tool install (nupkg)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "tool",
                "install",
                "--add-source",
                "nupkg",
                "pingmint.codegen.json"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Pingmint.CodeGen.Json"
            }
        },
        {
            "label": "test end-to-end",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "run",
                "test"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "add/update nuget package",
            "command": "dotnet",
            "type": "process",
            "args": [
                "add",
                "package",
                "${input:nugetPackage}"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/Pingmint.CodeGen.Json"
            }
        },
    ],
    "inputs": [
        {
            "id": "nugetPackage",
            "type": "pickString",
            "description": "NuGet Package",
            "default": "Pingmint.CodeGen.CSharp.CodeWriter",
            "options": [
                "Pingmint.CodeGen.CSharp.CodeWriter"
            ]
        }
    ]
}
